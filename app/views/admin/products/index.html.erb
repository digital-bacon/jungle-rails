<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Products</h1>
  </header>

  <nav class="nav nav-tabs mb-4">
    <%= link_to 'Dashboard', [:admin, :root], class: "nav-link" %>
    <%= link_to [:admin, :products], :class => "nav-link active" do %>
      Products <span class="badge rounded-pill bg-info ms-4"><%= count_products %></span>
    <% end %>
    <%= link_to root_path, :class => "nav-link" do %>
      Categories <span class="badge rounded-pill bg-info ms-4"><%= count_categories %></span>
    <% end %>
  </nav>

  <div class="well">
    <%= link_to '+ New Product', [:new, :admin, :product], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Category</th>
          <th>Price</th>
          <th>Qty Remaining</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @products %>
      </tbody>
    </table>

  </div>

</section>
