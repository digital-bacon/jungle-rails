<h1>New User</h1>

<%= bootstrap_form_for(@user, url: '/users') do |form| %>

  <%= form.text_field :first_name, required: true %>
  <%= form.text_field :last_name, required: true %>
  <%= form.text_field :email, required: true %>
  <%= form.password_field :password, required: true %>
  <%= form.password_field :password_confirmation, label: "Confirm Password", required: true %>
  <%= form.submit "Submit" %>

<% end %>